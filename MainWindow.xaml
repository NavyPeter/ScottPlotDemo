<Window
    x:Class="WpfAppTestDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfAppTestDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scottplot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CheckBox
            Name="LegendCheckbox"
            Grid.Row="0"
            Margin="10,5,10,0"
            VerticalAlignment="Center"
            Checked="LegendCheckbox_Checked"
            Content="ShowLegend"
            Unchecked="LegendCheckbox_Unchecked" />
        <CheckBox
            Name="ShowGridCheckbox"
            Grid.Row="0"
            Margin="120,5,10,0"
            VerticalAlignment="Center"
            Checked="ShowGridCheckbox_Checked"
            Content="ShowGrid"
            Unchecked="ShowGridCheckbox_Unchecked" />

        <scottplot:WpfPlot
            Name="WpfPlot1"
            Grid.Row="1"
            Margin="5"
             />
       
    </Grid>
</Window>   